{{ define "main" }}
	<form class="stack1" method="GET" action="search">
		{{ with .Form.FieldErrors.query }}
			<label class="error" for="q">{{ . }}</label>
		{{ end }}
		<input
			type="search"
			placeholder="Search..."
			value="{{ .Form.Query }}"
			name="q"
			id="q"
			required
		/>
		<div class="row1">
			<button type="submit" name="type" value="items">Items</button>
			<button type="submit" name="type" value="users">Users</button>
		</div>
	</form>
	<div class="stack0">
		{{ range .Items }}
			<div class="box stack2">
				<h3><a href="/item/view/{{ .ID }}">{{ .Name }}</a></h3>
				<p>{{ .Description }}</p>
			</div>
		{{ end }}
	</div>
{{ end }}
