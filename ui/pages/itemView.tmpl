{{ define "main" }}
	<h2>{{ .Name }}</h2>
	<p>{{ .Description }}</p>
	<form class="stack0" action="/kudo/{{ .ID }}" method="post">
		{{ if .Authenticated }}
			<div class="kudo">
				{{ range .Emojis }}
					<input
						name="emoji"
						type="radio"
						id="{{ .Key }}"
						value="{{ .Key }}"
					/><label for="{{ .Key }}">{{ .Value }}</label>
				{{ end }}
			</div>
			<textarea
				type="text"
				name="body"
				id="body"
				rows="5"
				maxlength="1000"
				required
			></textarea>
			<input type="submit" value="Give Kudos" />
		{{ end }}
		{{ range .Kudos }}
			<div class="box stack2">
				<h3>
					<a href="/user/view/{{ .CreatorUsername }}"
						>{{ .CreatorUsername }}</a
					>
				</h3>
				<h2>{{ .Emoji }}</h2>
				<p>{{ .Body }}</p>
			</div>
		{{ end }}
	</form>
{{ end }}
