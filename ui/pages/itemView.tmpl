{{ define "main" }}
	<h2>{{ .Name }}</h2>
	<p>{{ .Description }}</p>
	{{ if .Authenticated }}
		<form class="stack0" action="/kudo/{{ .ID }}" method="post">
			<div class="emoji-options row2">
				{{ range .Emojis }}
					<input
						name="emoji"
						type="radio"
						id="{{ .Key }}"
						value="{{ .Key }}"
					/><label class="emoji" for="{{ .Key }}">
						{{ .Value }}
					</label>
				{{ end }}
			</div>
			<textarea
				type="text"
				name="body"
				id="body"
				rows="5"
				maxlength="1000"
				required
			></textarea>
			<input
				type="submit"
				{{ if .Kudoed }}
					value="Give Kudos"
				{{ else }}
					value="Update Kudos"
				{{ end }}
			/>
			<input type="hidden" name="csrf_token" value="{{ .CSRFToken }}" />
		</form>
	{{ end }}
	{{ range .Kudos }}
		{{ template "kudo" . }}
	{{ end }}
{{ end }}
