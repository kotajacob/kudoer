{{ define "base" }}
	<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="viewport" content="width=device-width, initial-scale=1" />
			<meta name="description" content="Give kudos to your favorite things!" />
			<title>Kudoers</title>
			<style nonce="{{ .CSPNonce }}">
				:root {
					--ratio: 1.5;
					--s-5: calc(var(--s-4) / var(--ratio));
					--s-4: calc(var(--s-3) / var(--ratio));
					--s-3: calc(var(--s-2) / var(--ratio));
					--s-2: calc(var(--s-1) / var(--ratio));
					--s-1: calc(var(--s0) / var(--ratio));
					--s0: 1rem;
					--s1: calc(var(--s0) * var(--ratio));
					--s2: calc(var(--s1) * var(--ratio));
					--s3: calc(var(--s2) * var(--ratio));
					--s4: calc(var(--s3) * var(--ratio));
					--color-fg: #000;
					--color-fg-light: #666;
					--color-bg: #fff;
					--color-1: #e0ba91;
					--color-2: #e39aac;
					--color-3: #c45d9f;
					--color-4: #6461c2;
					--color-5: #2ba9b4;
					--color-6: #93d4b5;
					font-size: calc(0.333vw + 1em);
				}
				*,
				:after,
				:before {
					box-sizing: border-box;
					font-family: inherit;
					color: inherit;
					background-color: inherit;
					overflow-wrap: break-word;
					margin: 0;
					padding: 0;
					border: 0 solid;
				}
				body {
					color: var(--color-fg);
					background-color: var(--color-bg);
					box-sizing: content-box;
					max-inline-size: 50ch;
					margin-inline: auto;
					padding: var(--s1);
					font-family: system-ui, sans-serif;
				}
				a:active {
					color: var(--color-bg);
					background-color: var(--color-fg);
				}
				.color1 {
					color: var(--color-1);
				}
				.color2 {
					color: var(--color-2);
				}
				.color3 {
					color: var(--color-3);
				}
				.color4 {
					color: var(--color-4);
				}
				.color5 {
					color: var(--color-5);
				}
				.color6 {
					color: var(--color-6);
				}
				h1 {
					font-size: var(--s3);
				}
				h2 {
					font-size: var(--s2);
				}
				h3 {
					font-size: var(--s1);
				}
				nav {
					display: flex;
					column-gap: var(--s0);
					flex-direction: row;
					justify-content: center;
				}
				nav * {
					font-size: var(--s1);
					font-weight: bold;
					text-decoration: underline;
					cursor: pointer;
				}
				nav button:active {
					color: var(--color-bg);
					background-color: var(--color-fg);
				}
				.title {
					text-align: center;
				}
				.title a {
					text-decoration: none;
					font-family: "Nimbus Mono PS", "Courier New", monospace;
				}
				.title > a > .color1 {
					color: var(--color-bg);
					background-color: var(--color-1);
					padding-inline-start: var(--s-1);
				}
				.title > a > .color2 {
					color: var(--color-bg);
					background-color: var(--color-2);
				}
				.title > a > .color3 {
					color: var(--color-bg);
					background-color: var(--color-3);
				}
				.title > a > .color4 {
					color: var(--color-bg);
					background-color: var(--color-4);
				}
				.title > a > .color5 {
					color: var(--color-bg);
					background-color: var(--color-5);
				}
				.title > a > .color6 {
					color: var(--color-bg);
					background-color: var(--color-6);
					padding-inline-end: var(--s-1);
				}
				.stack0,
				.stack1 {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
				}
				.stack0,
				.stack1 > * {
					margin-block: 0;
				}
				.stack0 > * + * {
					margin-block-start: var(--s0);
				}
				.stack1 > * + * {
					margin-block-start: var(--s-1);
				}
				.stack2 > * + * {
					margin-block-start: var(--s-2);
				}
				label {
					display: block;
				}
				label.error {
					font-size: var(--s-1);
					font-weight: bold;
					color: var(--color-3);
				}
				div.error {
					text-align: center;
					font-weight: bold;
					color: var(--color-3);
				}
				input,
				textarea {
					width: 100%;
					display: block;
					border-width: 1px;
					border-color: var(--color-fg-light);
					font-size: var(--s0);
				}
				input.error,
				textarea.error {
					border-color: var(--color-3);
				}
				input[type="submit"] {
					font-weight: bold;
					color: var(--color-bg);
					background-color: var(--color-fg);
				}
			</style>
		</head>
		<body class="stack0">
			<h1 class="title">
				<a href="/">
					<span class="color1">K</span><span class="color2">u</span
					><span class="color3">d</span><span class="color4">o</span
					><span class="color5">e</span><span class="color6">r</span>
				</a>
			</h1>
			{{ with .Flash }}
				<span>{{ . }}</span>
			{{ end }}
			<nav>
				<h3><a href="/user/create">Register</a></h3>
				<h3><a href="/user/login">Login</a></h3>
				<form action="/user/logout" method="POST">
					<button>Logout</button>
				</form>
			</nav>
			{{ template "main" . }}
		</body>
	</html>
{{ end }}
