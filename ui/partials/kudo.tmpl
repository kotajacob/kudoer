{{ define "kudo" }}
	<div class="stack2 kudo">
		<img class="portrait" src="{{ ToHash "/static/portrait.png" }}" />
		<svg class="frame" width="600" height="200" alt="">
			<use href="#frame0" />
		</svg>
		<h2 class="row1">
			<span>
				<a href="/user/view/{{ .CreatorUsername }}"
					>{{ .CreatorDisplayName }}</a
				>
				gave
			</span>
			<img
				class="emoji"
				src="{{ .Emoji | printf "/static/emoji%v.svg" | ToHash }}"
				alt=""
			/>
			<span>
				to
				<a href="/item/view/{{ .ItemID }}">{{ .ItemName }}</a>
			</span>
		</h2>
		<p>{{ .Body }}</p>
		<p>
			<small>
				<a href="/user/view/{{ .CreatorUsername }}"
					>@{{ .CreatorUsername }}</a
				>
				&ndash;
				{{ Date .ID }}
			</small>
		</p>
	</div>
{{ end }}
